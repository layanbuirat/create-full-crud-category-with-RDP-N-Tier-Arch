@model KASHOP.Models.Brand

@{
    ViewData["Title"] = "Delete Brand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Brand</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this brand?</h5>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This action cannot be undone.
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                        
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                        
                        <dt class="col-sm-4">Products Count</dt>
                        <dd class="col-sm-8">@(Model.Products?.Count ?? 0) products</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
