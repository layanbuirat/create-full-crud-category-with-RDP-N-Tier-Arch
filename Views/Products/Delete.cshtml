@model KASHOP.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@(Model.Category?.Name ?? "No Category")</dd>        
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">$@Html.DisplayFor(model => model.Price)</dd>
        
        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.StockQuantity)</dd>
        
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Name)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>